<div class="container">
  <h2 class="text-center">Add a User</h2>
  <div class="col-8">
    <form action='/users' method="POST">
      <div class="form-group">
        <label class="input-text" for="name">Name</label>
        <input class="form-control" type="text" name="name" id="name" placeholder="Please enter your name">
      </div>
      <div class="form-group">
        <label class="input-text" for="localShelter">Local Shelter</label>
        <input class="form-control" type="text" name="localShelter" id="localShelter"
          placeholder="Please enter your local shelter">
      </div>
      <div class="form-group">
        <label class="input-text" for="userImg">User Image</label>
        <input class="form-control" type="text" name="userImg" id="userImg" placeholder="Please enter your name">
      </div>
      <input class="btn btn-info" type="submit" value="SUBMIT">
      <div class="box"></div>
    </form>
  </div>
</div>