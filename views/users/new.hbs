<div class="container">
  <a href="/">Back</a>
  <h2>Add a User</h2>
  <div class="col-8">
    <form action="/" method="POST">
      <div class="form-group">
        <label class="input-text" for="name">Name</label>
        <input class="form-control" type="text" name="name" placeholder="Please enter your name">
      </div>
      <div class="form-group">
        <label class="input-text" for="localShelter">Local Shelter</label>
        <input class="form-control" type="text" name="localShelter" id="localShelter"
          placeholder="Please enter your local shelter">
      </div>
      <input class="btn btn-info" type="submit" value="SUBMIT">
    </form>
  </div>
</div>