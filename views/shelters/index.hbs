{{#each shelters}}
<div class="container">
  <h2 class="text-left"><a href="/shelters/{{.id}}">{{name}}</a></h2>
  <p class="text-left">{{address.street}}</p>
  <p class="text-left">{{address.city}}</p>
  <p class="text-left">{{address.state}}</p>
  <p class="text-left">{{address.zipCode}}</p>
  <ul>
    {{#each animals}}
    <a href="/{{../fosters}}/{{fosters._id}}">
      {{name}}
    </a>
    {{/each}}
  </ul>
</div>
{{/each}}